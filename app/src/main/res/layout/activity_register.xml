<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#212529"
    tools:context=".register">


    <ImageView
        android:id="@+id/ic_logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="90dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_logo"/>
    <TextView
        android:id="@+id/text_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ic_logo"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/spookyhunter"
        android:textStyle="bold"
        android:textColor="@color/baseWhite"
        android:textSize="40sp"
        android:layout_centerHorizontal="true"
        android:text="Siram Aja"/>

    <TextView
        android:id="@+id/text_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_logo"
        android:layout_marginBottom="30dp"
        android:fontFamily="casual"
        android:textStyle="bold"
        android:textColor="@color/baseWhite"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:textAllCaps="true"
        android:text="Daftar Akun Baru"/>

    <TextView
        android:id="@+id/titleEdtNama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""/>

    <EditText
        android:id="@+id/edtNama"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:textColorHint="@color/baseBlack"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"
        android:textColor="@color/baseBlack"
        android:textSize="24sp"
        android:layout_below="@id/text_register"
        android:background="@drawable/stroke"
        android:inputType="text"
        android:hint="Nama"
        android:padding="10dp"
        />

    <EditText
        android:id="@+id/edtEmail"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:textColorHint="@color/baseBlack"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"
        android:textColor="@color/baseBlack"
        android:textSize="24sp"
        android:layout_below="@id/edtNama"
        android:background="@drawable/stroke"
        android:inputType="textEmailAddress"
        android:hint="Email"
        android:padding="10dp"
        />

    <EditText
        android:id="@+id/edtPassword"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:textColorHint="@color/baseBlack"
        android:layout_marginBottom="36dp"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"
        android:textColor="@color/baseBlack"
        android:textSize="24sp"
        android:layout_below="@id/edtEmail"
        android:background="@drawable/stroke"
        android:inputType="textVisiblePassword"
        android:hint="Password"
        android:padding="10dp"
        />

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edtPassword"
        android:text="Daftar"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="48dp"
        android:layout_marginLeft="48dp"
        android:textSize="16sp"
        android:textAllCaps="false"
        android:textColor="@color/baseWhite"
        android:background="@drawable/btn_stroke"
        />
    <RelativeLayout
        android:id="@+id/layoutLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnRegister"
        android:layout_centerHorizontal="true">
        <TextView
            android:id="@+id/txtLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sudah Punya Akun? "
            android:textColor="@color/baseWhite"
            />

        <TextView
            android:id="@+id/txtBtnLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/txtLogin"
            android:textColor="@color/baseYellow"
            android:onClick="pindahLogin"
            android:text="Masuk"
            />
    </RelativeLayout>





</RelativeLayout>