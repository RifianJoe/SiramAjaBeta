<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/baseBlack"
    tools:context=".login">

    <ImageView
        android:id="@+id/ic_logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="90dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_logo"/>
    <TextView
        android:id="@+id/text_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ic_logo"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/spookyhunter"
        android:textStyle="bold"
        android:textColor="@color/baseWhite"
        android:textSize="40sp"
        android:layout_centerHorizontal="true"
        android:text="Siram Aja"/>

    <TextView
        android:id="@+id/text_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_logo"
        android:layout_marginBottom="30dp"
        android:fontFamily="casual"
        android:textStyle="bold"
        android:textColor="@color/baseWhite"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:textAllCaps="true"
        android:text="Masuk"/>

    <EditText
        android:id="@+id/edtEmail"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:textColorHint="@color/baseBlack"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"
        android:textColor="@color/baseBlack"
        android:textSize="24sp"
        android:layout_below="@id/text_login"
        android:background="@drawable/stroke"
        android:hint="  Email"
        />

    <EditText
        android:id="@+id/edtPassword"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:textColorHint="@color/baseBlack"
        android:layout_marginBottom="36dp"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"
        android:textColor="@color/baseBlack"
        android:textSize="24sp"
        android:layout_below="@id/edtEmail"
        android:background="@drawable/stroke"
        android:hint="  Password"
        />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edtPassword"
        android:text="Masuk"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="48dp"
        android:layout_marginLeft="48dp"
        android:textSize="16sp"
        android:textAllCaps="false"
        android:textColor="@color/baseWhite"
        android:background="@drawable/btn_stroke"
        android:onClick="pindahHome"
        />

    <RelativeLayout
        android:id="@+id/layoutLupa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnLogin"
        android:layout_centerHorizontal="true">
        <TextView
            android:id="@+id/txtLupa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lupa Password? "
            android:textColor="@color/baseWhite"
            />

        <TextView
            android:id="@+id/txtBtnLupa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/txtLupa"
            android:textColor="@color/baseYellow"
            android:onClick="lupaBtn"
            android:text="Reset Password"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutDaftar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/layoutLupa"
        android:layout_centerHorizontal="true">
        <TextView
            android:id="@+id/txtDaftar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Belum Punya Akun? "
            android:textColor="@color/baseWhite"
            />

        <TextView
            android:id="@+id/txtBtnDaftar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/txtDaftar"
            android:textColor="@color/baseYellow"
            android:onClick="pindahDaftar"
            android:text="Daftar"
            />
    </RelativeLayout>



</RelativeLayout>